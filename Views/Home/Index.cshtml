@{
	ViewData["Title"] = "Home page";
}

<div class="text-center">
	<h1 class="">Добро пожаловать!</h1>
    <button class="button">
		<a asp-controller="LoginController" asp-action="Login" href="@Url.Action("Login", "Login")">Войти в аккаунт</a>
	</button>
	<button class="button">
		<a asp-controller="RegisterController" asp-action="Register" href="@Url.Action("Register", "Register")">Создать профиль</a>
	</button>
</div>
<style>
    * {
        font-family: Arial, Helvetica, sans-serif;
    }
    
    .text-center {
        text-align: center;
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        max-width: 400px;
        margin: 0 auto;
    }

    button {
        display: inline-block;
        background-color: #4CAF50;
        border: none;
        color: white;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 8px;
        padding: 10px 24px;
    }

    button a {
       color: white;
        text-decoration: none;
    }

    button:hover {
        background-color: #45a049;
     }
</style>